<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1' x:Class="ACOMv2.Views.HomeLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
      xmlns:local="using:ACOMv2"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity"
      xmlns:textcontrolbox="using:TextControlBoxNS" xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:views="using:ACOMv2.Views"
      xmlns:view_models="using:ACOMv2.ViewModels"
      
      mc:Ignorable="d">
    <Page.DataContext>
        view_models:HomeLandingViewModel
    </Page.DataContext>
    <Page.Resources>
        






        <Flyout  x:Key="myColorPickerFlyout"   >
            <StackPanel  >
                <ColorPicker x:ConnectionId='26' Name="myColorPicker"  AllowFocusOnInteraction="True"
                                                                 
                                                                                  
                        ColorSpectrumShape="Ring"
                        IsMoreButtonVisible="True"
                        IsColorSliderVisible="True"
                        IsColorChannelTextInputVisible="True"
                        IsHexInputVisible="True"
                        IsAlphaEnabled="True"
                        IsAlphaSliderVisible="False"
                        IsAlphaTextInputVisible="True"
                        Orientation="Vertical"  />
                <TextBox x:ConnectionId='27'                                                              AllowFocusOnInteraction="True">

                </TextBox>
            </StackPanel>
        </Flyout>

        <Flyout  x:Key="DataRenameFlyout"  >
            <StackPanel    >
                <TextBlock Text="请输入新名字："/>
                <TextBox x:ConnectionId='25'  Text="New name "  AllowFocusOnInteraction="True" MinWidth="128" Margin="8,6,0,0"                                    
                                                                             >
                </TextBox>
            </StackPanel>
        </Flyout>

        <MenuFlyout  x:Key="DataSortFlyout" >

            <RadioMenuFlyoutItem Text="升序" GroupName="group1" IsChecked="True"  CommandParameter="UP "/>
            <RadioMenuFlyoutItem Text="降序" GroupName="group1" IsChecked="False"/>

            <MenuFlyoutSeparator/>
            <!--<MenuFlyoutSubItem IsHoldingEnabled="True">-->
            <RadioMenuFlyoutItem Text="按名字" GroupName="group2"  IsChecked="True"/>
            <RadioMenuFlyoutItem Text="按更新频率" GroupName="group2"  IsChecked="False"/>
            <!--</MenuFlyoutSubItem>-->

        </MenuFlyout>



        <DataTemplate x:Key="ContactListViewTemplate"                                          >

                <!--<AppBarButton x:Name="HoverButton" IsTabStop="False" HorizontalAlignment="Right" Visibility="Visible"
                             Tag="{x:Bind ID}"
                       Width="36"    Click="HoverButton_Click" 
                         Grid.Column="3" Label="Button"  LabelPosition="Collapsed" Margin="0,0,0,0" >
                    <AppBarButton.Icon   >
                        <FontIcon Glyph="&#xE890;"/>
                    </AppBarButton.Icon  >
                    --><!--<FontIcon Glyph="&#xE769;" />--><!--
                </AppBarButton >
                <Border Grid.Column="0" Background="{x:Bind DataColor, Mode=OneWay}" CornerRadius="1.4" Width="2.8" Height="16" Margin="-25,0,0,0"/>
                <TextBlock Grid.Column="1" Text="{x:Bind DataName, Mode=OneWay}" x:Phase="1" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,5" Padding="0,9,120,9"/>
                <TextBlock Grid.Column="2" Text="{x:Bind Data, Mode=OneWay}" x:Phase="1" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,5" Padding="0,9,120,9"/>-->
            <Expander x:ConnectionId='17' BorderThickness="0"
                    IsExpanded="False"
                    ExpandDirection="Down"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                      Margin="-10 0 0 0"
                     >
                    <Expander.Header>
                        <Grid x:ConnectionId='18'  Margin="0 0 -16 0"                                                                                                          >


                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="1.25*"/>
                                <ColumnDefinition Width="1.5*"/>

                            </Grid.ColumnDefinitions>

                            <AppBarButton x:ConnectionId='19' x:Name="HoverButton" IsTabStop="False" HorizontalAlignment="Left" Visibility="Visible"
                                                    
                                Width="12"                               
                                Grid.Column="1" Label="Button"  LabelPosition="Collapsed" Margin="-4 1 0 0" >
                                <AppBarButton.Icon >
                                    <FontIcon Glyph="&#xE890;" />
                                </AppBarButton.Icon  >
                                <!--<FontIcon Glyph="&#xE769;" />-->
                            </AppBarButton >

                            <Border x:ConnectionId='20' Grid.Column="0"                                              CornerRadius="1.4" Width="2.8" Height="16" Margin="-30,0,0,0"/>
                            <wuc:AutoScrollView IsPlaying="True" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 5 8 5" Padding="0">
                                <TextBlock x:ConnectionId='23' Margin="4 0 0 0"                                                    />
                            </wuc:AutoScrollView>


                            <TextBlock x:ConnectionId='21' Grid.Column="3"                                               TextWrapping="Wrap"
                                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5" />
                            <wuc:Divider Margin="0 0 0 0" HorizontalAlignment="Right" MaxHeight="16" Orientation="Vertical" Grid.Column="1"  LineStroke="Black"  />
                        <wuc:Divider x:ConnectionId='22' Margin="0 0 0 0" HorizontalAlignment="Right" MaxHeight="16" Orientation="Vertical" Grid.Column="2"                                                />

                    </Grid>
                    </Expander.Header>
                <Expander.Content>
                    <RichTextBlock x:Name="TextHighlightingRichTextBlock">
                        <Paragraph>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua
                        </Paragraph>
                    </RichTextBlock>
                </Expander.Content>

                </Expander>
        </DataTemplate>

        <DataTemplate x:Key="LinkDeviceListViewTemplate"                                          >

            <Grid x:ConnectionId='11'                                                                                          >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="36"/>

                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="LightSkyBlue" CornerRadius="1.4" Width="2.8" Height="16" Margin="-25,0,0,0"/>
                <TextBlock x:ConnectionId='12' Grid.Column="1"                                                     
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,5" Padding="0,9,120,9"/>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:ConnectionId='14'  Grid.Row="0"                                                   FontSize="10" Height="12" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,8,0,0"  />

                    <TextBlock x:ConnectionId='15'  Grid.Row="1"                                                     FontSize="8" Height="12"
                   HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="0,0,0,0" />
                </Grid>
                <AppBarButton x:ConnectionId='13' x:Name="LinkButton" IsTabStop="False" HorizontalAlignment="Right" Visibility="Visible"
                    Width="36"                                                      
                        Grid.Column="3" Label="Button"  LabelPosition="Collapsed" Margin="0,0,0,0" >
                    <AppBarButton.Icon   >
                        <FontIcon Glyph="&#xE718;" />
                    </AppBarButton.Icon  >
                    <!--<FontIcon Glyph="&#xE769;" />-->
                </AppBarButton >

            </Grid>
        </DataTemplate>


        <DataTemplate x:Key="SmallPartsListViewTemplate"                                          >

            <Grid x:ConnectionId='9'                                                                                          Width="120" Height="120">
                <Border Width="120" Height="120"></Border>
            </Grid>
        </DataTemplate>


        <CommandBarFlyout x:ConnectionId='2' Placement="Right" x:Name="CommandBarFlyout1">
            <!--\-->
            <AppBarButton x:ConnectionId='3' Label="DataColor" ToolTipService.ToolTip="数据颜色"                            Flyout="{StaticResource myColorPickerFlyout}">
                <FontIcon Glyph="&#xE790;" />
            </AppBarButton>
            <AppBarButton x:ConnectionId='4' Label="Rename" Icon="Rename" ToolTipService.ToolTip="重命名"                            Flyout="{StaticResource DataRenameFlyout}"/>
            <AppBarButton x:ConnectionId='5' Label="Sorts" Icon="Sort" ToolTipService.ToolTip="排序"                            Flyout="{StaticResource DataSortFlyout}"/>
            <CommandBarFlyout.SecondaryCommands>

                <AppBarButton x:ConnectionId='6' x:Name="ResizeButton1" Label="Resize"                            />
                <AppBarButton x:ConnectionId='7' x:Name="MoveButton1" Label="Move"                            />
            </CommandBarFlyout.SecondaryCommands>
        </CommandBarFlyout>

    </Page.Resources>

    <wuc:AllLandingPage x:ConnectionId='28' x:Name="allLandingPage"
                        HeaderImage="{ThemeResource HeaderCover}"
                        HeaderOverlayImage="{ThemeResource HeaderCover}"
                                                                                   
                                                                               
                                                                                                           >


        <Grid x:ConnectionId='29' x:Name="ContentArea" >
            <Grid.DataContext>
                ACOM.Models
            </Grid.DataContext>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6.18*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="1.22*" MinWidth="160"/>
            </Grid.ColumnDefinitions>
            <controls:GridSplitter Grid.Column="1"   
                           Width="6"
                            VerticalAlignment="Stretch">
                <controls:GridSplitter.RenderTransform>
                    <TranslateTransform X="-2" />
                </controls:GridSplitter.RenderTransform>
            </controls:GridSplitter>



            <!--开始右边部分-->
            <Pivot  Grid.Column="2" Margin="0 0 8 0 " >
                <PivotItem Header="数据概览" MinWidth="160">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="60" Height="1*"/>
                            <RowDefinition Height="7.5*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="red" Margin="0,10,0,4"/>

                        <ListView x:ConnectionId='52' Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            SelectionMode="None" IsMultiSelectCheckBoxEnabled="False" IsRightTapEnabled="True"
                            x:Name="ListView_LinkDevice"
                            ItemTemplate="{StaticResource ContactListViewTemplate}"
                                                                                   
                            BorderThickness="0"
                            MinWidth="120"
                            MinHeight="250"
                            />

                    </Grid>
                </PivotItem>
                <PivotItem Header="网络" MinWidth="160">

                </PivotItem>

                <PivotItem Header="串口" MinWidth="160">
                    <Grid x:ConnectionId='42' x:Name="link_Grid">
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="100" Height="120"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="320"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="red" Height="100"/>
                        <!--<Border Grid.Row="1" Background="black" Height="Auto"/>-->
                        <!-- To create this sample, add/change the following properties onto the code for the base example above: -->
                        <ListView x:ConnectionId='43' Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                            SelectionMode="Multiple" IsMultiSelectCheckBoxEnabled="False" IsRightTapEnabled="True"
                            x:Name="BaseExample"
                            ItemTemplate="{StaticResource LinkDeviceListViewTemplate}"
                                                                             
                            BorderThickness="1"
                            MinWidth="120"
                            />
                        <!--<controls:Segmented Grid.Row="2" Width="li"
                            SelectedIndex="0"
                            SelectionMode="Single">
                            <controls:SegmentedItem 
                                    Icon="{ui:FontIcon Glyph=&#xE71B;}" />
                            <controls:SegmentedItem 
                                    Icon="{ui:FontIcon Glyph=&#xF22C;}" />
                            <controls:SegmentedItem 
                                    Icon="{ui:FontIcon Glyph=&#xE704;}" />

                        </controls:Segmented>-->

                        <TextBlock x:ConnectionId='44' Grid.Row="3" Text="USBdevice COM9" FontSize="10" x:Name="TextBlockCOM_Desc">

                        </TextBlock>
                        <Grid Grid.Row="4" Margin="0 12 0 0 ">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="84"/>
                                <ColumnDefinition Width="1.2*"/>

                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="COM端口" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            <TextBlock Grid.Column="0" Grid.Row="1"  Text="波特率" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            <TextBlock Grid.Column="0" Grid.Row="2"  Text="数据位" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            <TextBlock Grid.Column="0" Grid.Row="3"  Text="校验位" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            <TextBlock Grid.Column="0" Grid.Row="4"  Text="停止位" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
                            <TextBlock Grid.Column="0" Grid.Row="5"  Text="流控"   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>

                            <ComboBox x:ConnectionId='45' x:Name="combox_COM" Grid.Column="1" Grid.Row="0" IsEditable="True"  Width="100"                                            
                              HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0"                                                                 
                                                                                                                             >
                            </ComboBox>

                            <ComboBox x:ConnectionId='46' x:Name="LinkSerial_Boundrate" Grid.Column="1" Grid.Row="1"                                                   
                                      IsEditable="True"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0" SelectedIndex="3">
                                <x:String>2400</x:String>
                                <x:String>4800</x:String>
                                <x:String>9600</x:String>
                                <x:String>115200</x:String>
                                <x:String>203000</x:String>
                                <x:String>921600</x:String>
                                <x:String>1000000</x:String>
                                <x:String>2000000</x:String>
                            </ComboBox>
                            <ComboBox x:ConnectionId='47' x:Name="LinkSerial_DataLength" Grid.Column="1" Grid.Row="2"                                                   
                                      IsEditable="False"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0" SelectedIndex="3">
                                <x:Int32>5</x:Int32>
                                <x:Int32>6</x:Int32>
                                <x:Int32>7</x:Int32>
                                <x:Int32>8</x:Int32>
                            </ComboBox>
                            <ComboBox x:ConnectionId='48' x:Name="LinkSerial_CheckBit" Grid.Column="1" Grid.Row="3"                                                   
                                      IsEditable="False"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0" SelectedIndex="0">
                                <x:String>无</x:String>
                                <x:String>奇校验</x:String>
                                <x:String>偶校验</x:String>
                            </ComboBox>
                            <ComboBox x:ConnectionId='49' x:Name="LinkSerial_StopBit" Grid.Column="1" Grid.Row="4"                                                   
                                      IsEditable="False"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0" SelectedIndex="0">
                                <x:String>1</x:String>
                                <x:String>1.5</x:String>
                                <x:String>2</x:String>
                            </ComboBox>
                            <ComboBox x:ConnectionId='50' x:Name="LinkSerial_StreamCtrl" Grid.Column="1" Grid.Row="5"                                                   
                                      IsEditable="False"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 8 0" SelectedIndex="0">
                                <x:String>CTS/RTS</x:String>
                                <x:String>XON/XOFF</x:String>
                            </ComboBox>
                            <ToggleButton x:ConnectionId='51' x:Name="ConnectButton" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6"                             
                                    VerticalAlignment="Center" Margin="0 0 8 0"  HorizontalAlignment="Stretch" Content="连接">
                            </ToggleButton>
                            <AppBarSeparator Grid.Column="1" Grid.Row="0" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                            <AppBarSeparator Grid.Column="1" Grid.Row="1" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                            <AppBarSeparator Grid.Column="1" Grid.Row="2" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                            <AppBarSeparator Grid.Column="1" Grid.Row="3" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                            <AppBarSeparator Grid.Column="1" Grid.Row="4" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                            <AppBarSeparator Grid.Column="1" Grid.Row="5" Margin="-8 0 0 0" HorizontalAlignment ="Left"/>
                        </Grid>
                    </Grid>
                </PivotItem>
            </Pivot>

            <!--结束右边部分-->
            <!--开始中间部分-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--<Border Background="red" Grid.Row="0"/>
        <Border Background="red" Grid.Row="2"/>-->
                <controls:GridSplitter Grid.Row="1"   
                           Height="6" Margin="0,0,2,0"
                            HorizontalAlignment="Stretch">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform Y="-2" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>


                <CommandBar Grid.Row="2" >
                    <AppBarToggleButton x:ConnectionId='33' Icon="Shuffle" Label="Shuffle"                            />
                    <AppBarToggleButton x:ConnectionId='34' Icon="RepeatAll" Label="Repeat"                           />
                    <AppBarSeparator/>
                    <AppBarButton x:ConnectionId='35' Icon="Link" Label="Back"                           />
                    <AppBarButton x:ConnectionId='36' Icon="PreviewLink" Label="Stop"                           />
                    <AppBarToggleButton x:ConnectionId='37' Icon="Play" Label="Play"                                 ToolTipService.ToolTip="开始/暂停"/>
                    <AppBarButton x:ConnectionId='38' Icon="Download" Label="down"                                 ToolTipService.ToolTip="到达最底部"/>
                    <AppBarButton x:ConnectionId='39' Icon="Add" Label="add"                                ToolTipService.ToolTip="添加小部件">
                        <AppBarButton.Flyout>
                            <Flyout>
                                <ListView Height="160" Width="800" SelectionMode="Extended"
                                ItemTemplate="{StaticResource SmallPartsListViewTemplate}">
                                    
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsStackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>

                                </ListView>
                            </Flyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <CommandBar.SecondaryCommands>
                        <AppBarButton x:ConnectionId='40' Label="Like"                           />
                        <AppBarButton x:ConnectionId='41' Label="Dislike"                           />
                    </CommandBar.SecondaryCommands>

                    <CommandBar.Content>
                        <TextBlock Text="Now playing..." Margin="12,14"/>
                    </CommandBar.Content>
                </CommandBar>
 
                <textcontrolbox:TextControlBox x:ConnectionId='30' ShowLineHighlighter="True" SyntaxHighlighting="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                x:Name="dialogTextBox" Grid.Row="2" Margin="0 40 0 40" IsReadonly="False"                                                   >
                </textcontrolbox:TextControlBox>
 

                <Grid Grid.Row="3" MaxHeight="80" VerticalAlignment="Bottom" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="38"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:ConnectionId='32'    MaxHeight="80" x:Name="SendTextBox"
                                Grid.Column="0"
                                PlaceholderText="你想发送什么？"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                AcceptsReturn="True"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                IsSpellCheckEnabled="True"
                                TextWrapping="Wrap"
                                Margin="6 0 0 0">
                    </TextBox>
                    <Button Grid.Column="1" VerticalAlignment="Bottom"
                            Width="38" Height="32" HorizontalAlignment="Right">
                        <FontIcon Glyph="&#xE724;" FontSize="14" Margin="-2 0 0 0"/>
                    </Button>


                </Grid>





                <TabView x:ConnectionId='31' Grid.Column="0" Grid.Row="0" 
                                                            
                                                               
                                         
                 Margin="0,0,10,3"
                         
                 />
            </Grid>

        </Grid>


    </wuc:AllLandingPage>
</Page>


