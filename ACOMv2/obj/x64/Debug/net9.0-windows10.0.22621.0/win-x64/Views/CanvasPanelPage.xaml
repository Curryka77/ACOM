<Page x:ConnectionId='1'
    x:Class="ACOMv2.Views.CanvasPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACOMv2.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:developerTools="using:CommunityToolkit.WinUI.DeveloperTools"
    mc:Ignorable="d" xmlns:labs="using:CommunityToolkit.Labs.WinUI" xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:wuc="using:WinUICommunity"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
        <Grid.DataContext>
            ACOMv2.Models
        </Grid.DataContext>

        <!-- The same large TextBlock, wrapped in a ScrollViewer. -->
        <ScrollViewer MinHeight="200" MinWidth="200" 
                 
              HorizontalScrollBarVisibility="Auto" 
              VerticalScrollBarVisibility="Auto">
            <Grid  Height="1200" Width="1200" >

                <developerTools:AlignmentGrid HorizontalStep="20"
                              Opacity="0.2"
                              VerticalStep="20" />

                
                <labs:CanvasView x:ConnectionId='4' MinHeight="400" x:Name="CanvasView1"
                      Background="Red">
                    <Border x:ConnectionId='6' Canvas.Left="30" Canvas.Top="30"  VerticalAlignment="Stretch" x:Name="Test_Border" MinWidth="64" MinHeight="64"  Margin="0,0,0,0" Background="Black" ManipulationMode="TranslateX,TranslateY"                                             >
                        <TextBlock Text="Hello, World!" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <Grid x:ConnectionId='7' Canvas.Left="90" Canvas.Top="90" x:Name="TestGrid" MinHeight="32" MinWidth="32" Style="{ThemeResource GridCardPanel}">

                        <Grid.ColumnDefinitions>
                             <ColumnDefinition  />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                             <RowDefinition />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Column="0" Grid.Row="0" MinHeight="16" MinWidth="16"
                              ManipulationMode="TranslateX,TranslateY" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Style="{ThemeResource GridCardPanel}" >
                            <StackPanel>
                                <Button Content="  按钮   " />

                                <CheckBox Content="Two-state CheckBox" IsThreeState="True"/>

                                <RadioButtons Header="Options:">
                                    <RadioButton Content="Option 1"  />
                                    <RadioButton Content="Option 2"  />
                                    <RadioButton Content="Option 3" />
                                </RadioButtons>

                                <controls:RangeSelector x:ConnectionId='10' x:Name="rangeSelector"
                                VerticalAlignment="Center"
                                IsEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                RangeEnd="100"
                                RangeStart="0"
                                                                                                          
                                />

                                <Slider
                                    AutomationProperties.Name="Slider with ticks"
                                    TickFrequency="20"
                                    TickPlacement="Outside"
                                    SnapsTo="StepValues" />

                                <ToggleSwitch AutomationProperties.Name="simple ToggleSwitch"/>
                                <wuc:WaveProgressBar Value="35"/>
                                <wuc:ProgressRing IsActive="True" />

                                <controls:RadialGauge x:ConnectionId='11' x:Name="RadialGauge"
                              Width="280"
                              IsEnabled="True"
                              IsInteractive="True"
                              MaxAngle="150"
                              Maximum="240"
                              MinAngle="-150"
                              Minimum="0"
                              NeedleLength="60"
                              NeedleWidth="4"
                              ScalePadding="0"
                              ScaleTickWidth="0"
                              ScaleWidth="9"
                              StepSize="1"
                              TickLength="6"
                              TickPadding="12"
                              TickSpacing="17"
                              TickWidth="2"
                              ValueStringFormat="N0"
                              Value="130" />
                            </StackPanel>
                        </Grid>

                        <controls:ContentSizer x:ConnectionId='8' 
                            Height="4"   Grid.Row="1"  
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                                                                              
                                                              
                            Visibility="Visible" />

                        <controls:ContentSizer x:ConnectionId='9' 
                            Width="4" Grid.Column="1"  
                            HorizontalAlignment="Right"
                                                                              
                                                              
                            Visibility="Visible" />
                    </Grid>


                </labs:CanvasView>
                <Button x:ConnectionId='5' x:Name="ttt" Width="64" Height="32"/>

            </Grid>
        </ScrollViewer>

        <wuc:GooeyButton x:ConnectionId='2' x:Name="gooeyButton"
                         Margin="6 6 6 6"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                                                 
                                                         
                                                  >
            <wuc:GooeyButton.Content>
                <SymbolIcon Symbol="Add" />
            </wuc:GooeyButton.Content>
            <wuc:GooeyButton.ItemTemplate>
                <DataTemplate>
                    <SymbolIcon Symbol="{Binding}" />
                </DataTemplate>
            </wuc:GooeyButton.ItemTemplate>
        </wuc:GooeyButton>
    </Grid>
</Page>

