<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1' x:Class="ACOMv2.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:ACOMv2"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity" xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      mc:Ignorable="d">
    <Grid RowDefinitions="Auto, *"   >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <wuc:TitleBar x:ConnectionId='2' x:Name="AppTitleBar" Grid.ColumnSpan="3"
                                                                        
                                                               
                      IconSource="{wuc:BitmapIconSource Source=ms-appx:///Assets/icon.png}"
                      IsBackButtonVisible="True"
                      IsPaneToggleButtonVisible="True"
                                                                           
                                                                                 >
            <wuc:TitleBar.Content>
                <AutoSuggestBox x:ConnectionId='7' MinWidth="320" 
                                VerticalAlignment="Center"
                                PlaceholderText="Search"
                                QueryIcon="Find"
                                                                 
                                                            />
            </wuc:TitleBar.Content>
            <wuc:TitleBar.Footer>
                <Button x:ConnectionId='8' x:Name="ThemeButton"
                        Height="32"
                        Margin="0,0,4,0"
                                                 
                        Content="{wuc:FontIcon GlyphCode=E793,
                                               FontSize=16}"
                        Style="{ThemeResource SubtleButtonStyle}"
                        ToolTipService.ToolTip="Toggle Theme" />
            </wuc:TitleBar.Footer>
        </wuc:TitleBar>


        <NavigationView x:ConnectionId='3' x:Name="NavView"
                    Grid.Row="1" Grid.ColumnSpan="3"
                    IsBackButtonVisible="Collapsed"
                    IsPaneToggleButtonVisible="False">
            <NavigationView.Header>
                <wuc:BreadcrumbNavigator x:ConnectionId='4' x:Name="JsonBreadCrumbNavigator" />
            </NavigationView.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <controls:PropertySizer x:ConnectionId='5' Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Left"
                                                                                  
                            Maximum="440"
                            Minimum="52"  
                                                                                  />
                <Frame x:ConnectionId='6' x:Name="NavFrame" Grid.Column="1"
                                               />
            </Grid>

        </NavigationView>
    </Grid>
</Page>


