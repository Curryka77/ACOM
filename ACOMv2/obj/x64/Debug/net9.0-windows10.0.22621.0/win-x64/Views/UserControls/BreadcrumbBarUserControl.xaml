<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="ACOMv2.Views.BreadcrumbBarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <BreadcrumbBar x:ConnectionId='2' Margin="10"                                                                      >
        <BreadcrumbBar.ItemTemplate>
            <DataTemplate                      >
                <TextBlock x:ConnectionId='4' Style="{ThemeResource TitleTextBlockStyle}"                 />
            </DataTemplate>
        </BreadcrumbBar.ItemTemplate>
        <i:Interaction.Behaviors>
            <ic:EventTriggerBehavior EventName="ItemClicked">
                <ic:EventTriggerBehavior.Actions>
                    <ic:InvokeCommandAction x:ConnectionId='5'                                               />
                </ic:EventTriggerBehavior.Actions>
            </ic:EventTriggerBehavior>
        </i:Interaction.Behaviors>
    </BreadcrumbBar>
</UserControl>


